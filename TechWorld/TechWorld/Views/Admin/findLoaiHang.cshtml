@using PagedList.Mvc;
@using PagedList;
@model IPagedList<TechWorld.Models.LoaiHang>

@{
    ViewBag.Title = "findLoaiHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Search-->
<form action="~/Admin/findLoaiHang">
    <div class="relative flex flex-wrap items-stretch w-1/4 mb-6 ml-2 transition-all rounded-lg ease-soft">
        <span class="text-sm ease-soft leading-5.6 absolute z-50 -ml-px flex h-full items-center whitespace-nowrap rounded-lg rounded-tr-none rounded-br-none border border-r-0 border-transparent bg-transparent py-2 px-2.5 text-center font-normal text-slate-500 transition-all">
            <i class="fas fa-search"></i>
        </span>
        <input type="text"
               class="pl-8.75 text-sm focus:shadow-soft-primary-outline ease-soft w-1/100 leading-5.6 relative -ml-px block min-w-0 flex-auto rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding py-2 pr-3 text-gray-700 transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none focus:transition-shadow"
               placeholder="Tìm kiếm..."
               name="nameSearch" />
    </div>
</form>

<!-- table 1 -->
<div class="flex flex-wrap -mx-3 ">
    <div class="flex-none w-2/3 max-w-full px-3">
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border">
            <div class="p-6 pb-0 mb-0 bg-white border-b-0 border-b-solid rounded-t-2xl border-b-transparent">
                <h6>Thông tin loại hàng</h6>
            </div>
            <div class="flex-auto px-0 pt-0 pb-2">
                <div class="p-0 overflow-x-auto">
                    <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                        <thead class="align-bottom">
                            <tr>
                                <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Mã Loại</th>
                                <th class="px-6 py-3 pl-2 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Tên Loại</th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70"></th>
                                <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70"></th>
                                <th class="px-6 py-3 font-semibold capitalize align-middle bg-transparent border-b border-gray-200 border-solid shadow-none tracking-none whitespace-nowrap text-slate-400 opacity-70"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <div class="flex px-2 py-1">
                                            <div>
                                                <img src="~/@item.HinhAnh" class="inline-flex items-center justify-center mr-4 text-sm text-white transition-all duration-200 ease-soft-in-out h-9 w-9 rounded-xl object-none" alt="user1" />
                                            </div>
                                            <h6 class="mb-0 text-base leading-normal translate-y-[7px]">@item.MaLoai</h6>
                                        </div>
                                    </td>
                                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <span class="text-base font-semibold leading-tight text-slate-400">@item.TenLoai</span>
                                    </td>
                                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <span class="text-base font-semibold leading-tight text-slate-400"></span>
                                    </td>
                                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <span class="text-base font-semibold leading-tight text-slate-400"></span>
                                    </td>
                                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap shadow-transparent">
                                        <div class="flex flex-row gap-4">
                                            <a href="@Url.Action("deleteLoaiHang","Admin", new {id = item.MaLoai})" class="text-gray-700 hover:text-red-500 duration-200 ease-in-out cursor-pointer">
                                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 448 512">
                                                    <path path d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z"></path>
                                                </svg>
                                            </a>
                                            <a href="@Url.Action("updateLoaiHang","Admin", new { id = item.MaLoai })" class="text-gray-700 hover:text-green-500 duration-200 ease-in-out cursor-pointer">
                                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 448 512" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M441 58.9L453.1 71c9.4 9.4 9.4 24.6 0 33.9L424 134.1 377.9 88 407 58.9c9.4-9.4 24.6-9.4 33.9 0zM209.8 256.2L344 121.9 390.1 168 255.8 302.2c-2.9 2.9-6.5 5-10.4 6.1l-58.5 16.7 16.7-58.5c1.1-3.9 3.2-7.5 6.1-10.4zM373.1 25L175.8 222.2c-8.7 8.7-15 19.4-18.3 31.1l-28.6 100c-2.4 8.4-.1 17.4 6.1 23.6s15.2 8.5 23.6 6.1l100-28.6c11.8-3.4 22.5-9.7 31.1-18.3L487 138.9c28.1-28.1 28.1-73.7 0-101.8L474.9 25C446.8-3.1 401.2-3.1 373.1 25zM88 64C39.4 64 0 103.4 0 152L0 424c0 48.6 39.4 88 88 88l272 0c48.6 0 88-39.4 88-88l0-112c0-13.3-10.7-24-24-24s-24 10.7-24 24l0 112c0 22.1-17.9 40-40 40L88 464c-22.1 0-40-17.9-40-40l0-272c0-22.1 17.9-40 40-40l112 0c13.3 0 24-10.7 24-24s-10.7-24-24-24L88 64z" />
                                                </svg>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @using (Ajax.BeginForm("submitUpdateLoaiHang", "Admin", new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "load_data"
    },
        new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="w-[300px]">
            <form>
                <div class="w-full p-4 bg-white border-0 border-transparent border-solid shadow-soft-xl rounded-2xl bg-clip-border">
                    <input type="hidden" name="id" value="@Session["MaLoai"]" />
                    <div class="w-full max-w-sm min-w-[200px]">
                        <input name="TenLoai" class="w-full bg-transparent placeholder:text-slate-400 text-slate-700 text-sm border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-purple-500 hover:border-purple-300 shadow-sm focus:shadow" placeholder="Tên Loại..." value="@Session["TenLoai"]" required />
                    </div>
                    <div class="w-full max-w-sm min-w-[200px] mt-4">
                        <input class="w-full bg-transparent text-sm text-gray-900 border border-slate-200 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:border-purple-500 hover:border-purple-300 shadow-sm focus:shadow"
                               id="file_input" type="file" name="HinhAnh" />
                    </div>
                    <button type="submit"
                            class="text-white bg-blue-500 rounded-lg hover:shadow-lg hover:shadow-blue-500/50 font-medium text-sm px-3 py-1.5 text-center me-2 mb-4 duration-200 ease-in-out mt-4">
                        Cập nhập loại hàng
                    </button>
                </div>
            </form>
        </div>
    }
</div>

<div class="flex justify-center space-x-2 my-4">
    @if (Model.PageNumber > 1)
    {
        <a href="@Url.Action("LoaiHangList", new { page = Model.PageNumber - 1 })" class="px-4 py-2 rounded-md bg-gray-200 hover:bg-gray-300">
            Prev
        </a>
    }

    @for (int i = 1; i <= Model.PageCount; i++)
    {
        <a href="@Url.Action("LoaiHangList", new { page = i })" class="px-4 py-2 rounded-md @(i == Model.PageNumber ? "bg-blue-500 text-white" : "bg-gray-200 hover:bg-gray-300")">
            @i
        </a>
    }

    @if (Model.PageNumber < Model.PageCount)
    {
        <a href="@Url.Action("LoaiHangList", new { page = Model.PageNumber + 1 })" class="px-4 py-2 rounded-md bg-gray-200 hover:bg-gray-300">
            Next
        </a>
    }
</div>

